    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "test/error.spec.ts"
            ],
            "name": "Jest task",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "preLaunchTask": "npm: esbuild",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}