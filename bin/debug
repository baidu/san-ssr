#!/usr/bin/env node

const { execCommandSync, assertSanHTMLEqual } = require('../dist/index')
const chalk = require('chalk')
const { readFileSync, readdirSync } = require('fs')
const { resolve } = require('path')
const { compile } = require('../dist/target-js/utils/case')
const root = resolve(__dirname, '../test/cases')

const caseName = process.argv[2]
if (!caseName) {
    console.error('Usage: debug <CASE_NAME>')
    console.error('Example: debug array-literal')
    console.error()
    console.error('Available case names:')
    console.error(readdirSync(root).map(x => `  - ${x}`).join('\n'))
    process.exit(1)
}

const htmlPath = resolve(root, caseName, 'expected.html')
const expected = readFileSync(htmlPath, 'utf8')
console.log(chalk.cyan(`[EXPECTED] ${caseName}`), expected)

compile(caseName)
const got1 = execCommandSync(resolve(__dirname, `./render-by-source.js`), [caseName])
const pass1 = assertSanHTMLEqual(got1, expected)
console.log(chalk[pass1 ? 'green' : 'red'](`[ SOURCE ] ${caseName}`), got1)

const got2 = execCommandSync(resolve(__dirname, `./render-onthefly.js`), [caseName])
const pass2 = assertSanHTMLEqual(got2, expected)
console.log(chalk[pass2 ? 'green' : 'red'](`[ RENDER ] ${caseName}`), got2)

if (!pass1 || !pass2) process.exit(1)
