{
  "name": "san-ssr",
  "version": "1.7.1",
  "description": "San server-side-render framework and utils",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test",
    "example": "example"
  },
  "files": [
    "runtime",
    "bin",
    "dist",
    "index.d.ts",
    "*.json",
    "*.md"
  ],
  "bin": {
    "san-ssr": "./dist/bin/ssr.js"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "docs": "typedoc --out docs src && touch docs/.nojekyll",
    "build": "tsc && chmod a+x dist/bin/*",
    "build-watch": "tsc --watch",
    "unit": "jest test/unit",
    "build-integration": "node -e \"require('./dist/target-js/utils/case').compileAll()\"",
    "integration": "npm run build-integration && jest test/integration.spec.js",
    "perf": "node ./test/perf/index.js",
    "test": "npm run build && npm run unit && npm run integration",
    "coveralls": "jest test/unit --coverage && cat coverage/lcov.info | coveralls",
    "version": "npm run build && npm run docs",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/searchfe/san-ssr.git"
  },
  "author": "harttle <yangjvn@126.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/searchfe/san-ssr/issues"
  },
  "homepage": "https://github.com/searchfe/san-ssr#readme",
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "@jest/transform": "^24.9.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/npm": "^5.1.8",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/jest": "^24.0.18",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "art-template": "^4.13.2",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-jest": "^24.9.0",
    "coveralls": "^3.0.7",
    "ejs": "^3.0.1",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "etpl": "^3.2.0",
    "handlebars": "^4.5.3",
    "jest": "^24.9.0",
    "mustache": "^3.2.0",
    "san": "^3.8.0",
    "semantic-release": "^15.13.27",
    "swig-templates": "^2.0.3",
    "typedoc": "^0.15.0"
  },
  "dependencies": {
    "camelcase": "^5.3.1",
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "lodash": "^4.17.15",
    "snake-case": "^2.1.0",
    "ts-morph": "^4.0.1",
    "ts2php": "^0.14.0",
    "typescript": "^3.4.5",
    "yargs": "^14.2.0"
  },
  "peerDependencies": {
    "san": "~3.8.0"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
